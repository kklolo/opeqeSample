<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activites.SplashActivity"
        android:background="@drawable/gradient_background">


        <com.hanks.htextview.HTextView
            android:id="@+id/activity_splash_txt_details"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="30sp"
            android:layout_centerInParent="true"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <LinearLayout
                android:id="@+id/activity_splash_no_internet_or_error_layout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/activity_splash_txt_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="32dp"
                    android:text="No internet!"
                    android:textColor="#000"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/activity_splash_txt_error_details"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="23dp"
                    android:text="Please check your connection."
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txt_retry"
                    android:layout_marginTop="64dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="32dp"
                    android:text="Retry"
                    android:textStyle="bold"
                    android:textColor="#C2185B"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</layout>
